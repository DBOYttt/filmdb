<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="film_db.MainPage">

    <StackLayout 
    VerticalOptions="CenterAndExpand" 
    HorizontalOptions="CenterAndExpand"
    Spacing="20">

        <!-- Pola logowania/rejestracji -->
        <Entry Placeholder="Nazwa użytkownika"/>
        <Entry Placeholder="Hasło" IsPassword="True"/>

        <!-- Przyciski akcji -->
        <Button Text="Logowanie" Clicked="OnLoginClicked"/>
        <Button Text="Rejestracja" Clicked="OnRegisterClicked"/>
        <Button Text="Kontynuuj jako Gość" Clicked="OnContinueAsGuestClicked"/>
    </StackLayout>

</ContentPage>
